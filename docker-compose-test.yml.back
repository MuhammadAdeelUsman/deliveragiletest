version: '3'

services:
  unittests:
    build: 
      dockerfile: Dockerfile-test 
      context: .
    environment:
      - ConnectionStrings:DB_Conn
    #command: [. /entrypoint-tests.sh]
    #entrypoint: dotnet test /ModelTests/ModelTests.csproj
    entrypoint: ["bash", "/flyway/bin/wait-for-it.sh", "--timeout=30", "db:1433", "--", "dotnet test /ModelTests/ModelTests/csproj"]      
    depends_on:
      - migration
      - db
  #entrypoint: ["bash","/ModelTests/entrypoint-tests.sh", "--timeout=30"]
    #command: dotnet test ModelTests/ModelTests.csproj      
    #command: ["/wait-for-it.sh", "mysql:3306", "--", [entrypoint function]]
 #entrypoint:  ModelTests/entrypoint-tests.sh
     
  db:
    image: mcr.microsoft.com/mssql/server
    environment:
      SA_PASSWORD: "P@ssword1"
      ACCEPT_EULA: "Y"
    ports:
      - "1620:1433"
  migration:
    image: boxfuse/flyway:latest
    container_name: flyway_migration_tests
    volumes:
    - ./flyway/sql:/flyway/sql
    - ./flyway/bin:/flyway/bin
    entrypoint: ["bash", "/flyway/bin/wait-for-it.sh", "--timeout=30", "db:1433", "--", "flyway"]      
    command: -url=jdbc:sqlserver://db;database=master -user=sa -password=P@ssword1 -mixed=true migrate
    depends_on:
      - db
    